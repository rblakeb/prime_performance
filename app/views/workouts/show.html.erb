<% title 'Workout of the day' %>
<% meta_tag :description, 'Workout of the day' %>

<h1>Workout of the Day</h1>
<hr>
<div class="container">
	<h2 class="primary-blue"><%= @workout.scheduled_on.strftime("%B %e, %Y") %></h2>
		<h6>
					<p><%= markdown @workout.content %></p>
		</h6>
	<%= link_to 'Edit Workout', edit_workout_path, class: 'btn btn-light' if current_admin %>
	<%= link_to 'Delete Workout', workout_path(@workout), method: :delete, data: { confirm: 'Are you sure you want to delete this workout?' }, class: 'btn btn-danger' if current_admin %>
</div>
