<div class="container">
  <p id="notice"><%= notice %></p>

  <h1>
    Nutrition Clients
    <%= link_to 'New Nutrition Client', new_nutrition_client_path, class: 'btn btn-primary float-right' %>
  </h1>
  <hr>
  <table class="table">
        <thead class="thead-light">
          <tr>
            <th scope="col">#</th>
            <th scope="col">Email</th>
            <th scope="col">Name</th>
            <th scope="col"></th>
            <th scope="col"></th>
          </tr>
        </thead>

        <tbody>
          <% @nutrition_clients.each.with_index do |nutrition_client, index| %>
          <% index += 1 %>
            <tr>
              <th scope="row" style="vertical-align: middle;"><%= index %></th>
              <td><%= mail_to nutrition_client.email, nutrition_client.email, class: 'btn btn-link' %></td>
              <td><%= link_to nutrition_client.name, nutrition_client_path(id: nutrition_client.id), class: 'btn btn-link' %></td>
              <td><%= link_to 'Edit', edit_nutrition_client_path(nutrition_client), class: 'btn btn-light' %></td>
              <td><%= link_to 'Destroy', nutrition_client, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-light' %></td>
            </tr>
          <% end %>
        </tbody>
      </table>

  <br>
</div>