<% title @article.title %>
<% meta_tag :description, @article.content.truncate(70, separator: ' ') %>
<div class="container">
	<h1><%= @article.title %></h1>
	<hr>
	<div class="row">
		<p><%= @article.content %></p>
	</div>
	<hr>
		<% if current_admin %>
			<%= link_to 'Edit Article', edit_article_path(@article), class: 'btn btn-light' %>
			<%= link_to 'Delete Article', article_path(@article), method: :delete, data: { confirm: 'Are you sure you want to delete this awesome article?' }, class: 'btn btn-danger' %>
		<% end %>
</div>